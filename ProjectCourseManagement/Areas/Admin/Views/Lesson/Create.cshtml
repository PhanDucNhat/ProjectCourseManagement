@model ProjectCourseManagement.Models.Lesson

@{
    ViewData["Title"] = "Tạo bài học mới";
    var courseName = ViewBag.CourseName as string;
}

<h2>Tạo bài học mới - @courseName</h2>

<form asp-controller="Lesson" asp-action="Create" method="post">
    <input type="hidden" asp-for="CourseID" />

    <div class="form-group">
        <label asp-for="LessonName">Tên bài học</label>
        <input asp-for="LessonName" class="form-control" />
        <span asp-validation-for="LessonName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Mô tả</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="VideoUrl">URL video bài giảng</label>
        <input asp-for="VideoUrl" class="form-control" placeholder="Nhập URL video (ví dụ: https://youtube.com/...)" />
        <span asp-validation-for="VideoUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ExerciseContent">Nội dung bài tập</label>
        <textarea asp-for="ExerciseContent" class="form-control" placeholder="Nhập câu hỏi hoặc nội dung bài tập"></textarea>
    </div>
    <button type="submit" class="btn btn-success">Tạo</button>
    <a asp-controller="Lesson" asp-action="Details" asp-route-id="@Model.CourseID" class="btn btn-secondary">Quay lại</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}