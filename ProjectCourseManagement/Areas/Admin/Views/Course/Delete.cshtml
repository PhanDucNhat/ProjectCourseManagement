@model ProjectCourseManagement.Models.Course

@{
    ViewData["Title"] = "Delete Course";
}

<h2>Delete Course</h2>

<div>
    <h4>Are you sure you want to delete this course?</h4>
    <dl class="row">
        <dt class="col-sm-2">Course Name</dt>
        <dd class="col-sm-10">@Model.CourseName</dd>

        <dt class="col-sm-2">Instructor</dt>
        <dd class="col-sm-10">@(Model.Instructor?.InstructorName ?? "Chưa xác định")</dd>

        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@(Model.StartDate?.ToString("yyyy-MM-dd") ?? "Chưa xác định")</dd>

        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@(Model.EndDate?.ToString("yyyy-MM-dd") ?? "Chưa xác định")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="CourseID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
