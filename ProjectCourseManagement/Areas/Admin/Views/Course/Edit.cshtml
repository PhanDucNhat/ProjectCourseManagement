@model ProjectCourseManagement.Models.Course

@{
    ViewData["Title"] = "Sửa khóa học";
    var instructors = ViewBag.Instructors as List<ProjectCourseManagement.Models.Instructor>;
}

<h2>Edit Course</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="CourseID" />

    <div class="form-group">
        <label asp-for="CourseName"></label>
        <input asp-for="CourseName" class="form-control" />
        <span asp-validation-for="CourseName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="InstructorId">Giảng viên</label>
        <select asp-for="InstructorId" class="form-control" asp-items="@(new SelectList(ViewBag.Instructors, "InstructorId", "InstructorName"))">
            <option value="">-- Chọn giảng viên --</option>
        </select>
        <span asp-validation-for="InstructorId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" class="form-control" type="date" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}