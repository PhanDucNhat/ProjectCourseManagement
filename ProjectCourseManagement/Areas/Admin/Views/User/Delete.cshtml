@model ProjectCourseManagement.Models.Users
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Xác nhận xóa người dùng</h2>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="UserId">Mã người dùng</label>
            <input type="text" class="form-control mb-3" asp-for="UserId" disabled>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="FullName">Họ và tên</label>
            <input type="text" class="form-control mb-3" asp-for="FullName" disabled>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Email">Email</label>
            <input type="email" class="form-control mb-3" asp-for="Email" disabled>
        </div>
    </div>
    <!-- Begin Form -->
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="UserId" />
        <a class="btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()">
            <i class="bi bi-arrow-left-circle"></i> Quay lại
        </a>
        <button type="submit" class="btn btn-lg btn-danger p-2">
            <i class="bi bi-trash-fill"></i> Xóa
        </button>
    </form>
    <!-- End Form -->
</main>